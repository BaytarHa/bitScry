@{
    ViewData["Title"] = "Index";
    string barChart = TempData["BarChart"].ToString();
    string lineChart = TempData["LineChart"].ToString();
    string lineScatterChart = TempData["LineScatterChart"].ToString();
    string radarChart = TempData["RadarChart"].ToString();
    string polarChart = TempData["PolarChart"].ToString();
    string pieChart = TempData["PieChart"].ToString();
}

@section head {

}

<h2>Charts</h2>

<div class="row">
    <div class="col">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="card col-md-6">
        <div class="card-body">
            <canvas id="barChart"></canvas>
        </div>
    </div>
    <div class="card col-md-6">
        <div class="card-body">
            <canvas id="lineChart"></canvas>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="card col-md-6">
        <div class="card-body">
            <canvas id="lineScatterChart"></canvas>
        </div>
    </div>
    <div class="card col-md-6">
        <div class="card-body">
            <canvas id="radarChart"></canvas>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="card col-md-6">
        <div class="card-body">
            <canvas id="polarChart"></canvas>
        </div>
    </div>
    <div class="card col-md-6">
        <div class="card-body">
            <canvas id="pieChart"></canvas>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        &nbsp;
    </div>
</div>

@section Scripts {
    <script src="~/vendor/chart.js/Chart.js"></script>
    <script type="text/javascript">
        @Html.Raw(barChart);
    </script>
    <script type="text/javascript">
        @Html.Raw(lineChart);
    </script>
    <script type="text/javascript">
        @Html.Raw(lineScatterChart);
    </script>
    <script type="text/javascript">
        @Html.Raw(radarChart);
    </script>
    <script type="text/javascript">
        @Html.Raw(polarChart);
    </script>
    <script type="text/javascript">
        @Html.Raw(pieChart);
    </script>
}